<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/logo"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:scaleType="fitCenter"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="مدرسة شمامسة مار إفرام السرياني"
                android:textAppearance="?android:textAppearanceLarge"
                android:textAlignment="center"
                android:paddingBottom="10dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact Info"
                android:textAppearance="?android:textAppearanceMedium"
                android:paddingBottom="8dp"
                android:paddingLeft="10dp"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:paddingRight="16dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/mapicon" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="كنيسة السيدة العذراء بالدقي"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textAlignment="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:paddingRight="16dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/http" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="madraset-elshamamsa.com"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textAlignment="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:paddingRight="16dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/facebook" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/shamamsaMEF"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textAlignment="center"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textAppearance="?android:textAppearanceMedium"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="مدرسة شمامسة مار إفرام السرياني بكنيسة السبدة العذراء بالدقي ... تهدف إلى تعليم شمامستنا و شعبنا في كل الأعمار الاستمتاع بألحان و طقوس كنيستنا الجميلة و لغتها القبطية"
                android:textAppearance="?android:textAppearanceSmall"
                android:paddingBottom="10dp"
                android:paddingRight="10dp"/>
        </LinearLayout>
</ScrollView>
